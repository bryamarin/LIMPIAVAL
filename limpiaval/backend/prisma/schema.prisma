// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Plan {
  id       Int     @id @default(autoincrement())
  name     String
  price    Int
  // Almacenamos las características como un string JSON, ya que SQLite no soporta arrays.
  // La aplicación se encargará de convertirlo (parse/stringify).
  features String
  featured Boolean @default(false)
}

model Service {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  rating      Float
  imageUrl    String
}

model GalleryItem {
  id  Int    @id @default(autoincrement())
  alt String
  url String
}

model Testimonial {
  id      Int    @id @default(autoincrement())
  name    String
  avatar  String
  rating  Float
  comment String
}

model Lead {
  id        Int       @id @default(autoincrement())
  name      String
  email     String
  phone     String?
  serviceId Int?
  message   String?
  type      String // "CONTACT" o "QUOTE"
  createdAt DateTime  @default(now())
}

